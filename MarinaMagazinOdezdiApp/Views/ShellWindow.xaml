<Window x:Class="MarinaMagazinOdezdiApp.Views.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarinaMagazinOdezdiApp"
        mc:Ignorable="d"
        Title="Marina Magazin Odezdi" Height="720" Width="1080"
        WindowState="Maximized">
    <DockPanel>
        <Button Command="{Binding LogoutCommand}" 
                DockPanel.Dock="Top"
                HorizontalAlignment="Right" 
                Margin="10"
                ToolTip="Выход"
                Visibility="{Binding CurrentUser, Converter={StaticResource NullToVisibilityConverter}}"
                Content="Выход"/>
        <ContentControl Content="{Binding CurrentViewModel}"/>
    </DockPanel>
</Window>