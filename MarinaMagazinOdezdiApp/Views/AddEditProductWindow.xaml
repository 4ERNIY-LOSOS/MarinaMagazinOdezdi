<Window x:Class="MarinaMagazinOdezdiApp.Views.AddEditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить/Редактировать товар" 
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20" MinWidth="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Название:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Product.Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,10,0,10"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Описание:" VerticalAlignment="Top" Margin="0,10,10,0"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Product.Description, UpdateSourceTrigger=PropertyChanged}" Margin="0,10,0,10" TextWrapping="Wrap" AcceptsReturn="True" Height="80" VerticalScrollBarVisibility="Auto"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Цена:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Product.Price, UpdateSourceTrigger=PropertyChanged}" Margin="0,10,0,10"/>

        <Label Grid.Row="3" Grid.Column="0" Content="В наличии:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Product.StockQuantity, UpdateSourceTrigger=PropertyChanged}" Margin="0,10,0,10"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Категория:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <ComboBox Grid.Row="4" Grid.Column="1" ItemsSource="{Binding Categories}" 
                  SelectedItem="{Binding SelectedCategory}"
                  DisplayMemberPath="CategoryName"
                  Margin="0,10,0,10"/>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" IsDefault="True" Command="{Binding SaveCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" MinWidth="80"/>
            <Button Content="Отмена" IsCancel="True" Margin="10,0,0,0" MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>