<UserControl x:Class="MarinaMagazinOdezdiApp.Views.LoginRegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border Style="{StaticResource Container.Card}" MinWidth="450">
            <TabControl>
                <TabItem Header="ВХОД">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Email:" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <TextBox Grid.Column="1" Text="{Binding LoginEmail, UpdateSourceTrigger=PropertyChanged}" Margin="0,10,0,10"/>

                        <TextBlock Grid.Row="1" Text="Пароль:" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <PasswordBox Grid.Row="1" Grid.Column="1" x:Name="LoginPasswordBox" Margin="0,10,0,10"/>

                        <Button Grid.Row="2" Grid.ColumnSpan="2" Content="ВОЙТИ" 
                                Command="{Binding LoginCommand}"
                                CommandParameter="{Binding ElementName=LoginPasswordBox}"
                                Margin="0,20,0,0" HorizontalAlignment="Stretch"/>
                    </Grid>
                </TabItem>
                <TabItem Header="РЕГИСТРАЦИЯ">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Email:" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <TextBox Grid.Column="1" Text="{Binding RegisterEmail, UpdateSourceTrigger=PropertyChanged}" Margin="0,10,0,10"/>

                        <TextBlock Grid.Row="1" Text="Пароль:" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <PasswordBox Grid.Row="1" Grid.Column="1" x:Name="RegisterPasswordBox" Margin="0,10,0,10"/>

                        <TextBlock Grid.Row="2" Text="Имя:" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding RegisterFirstName, UpdateSourceTrigger=PropertyChanged}" Margin="0,10,0,10"/>

                        <TextBlock Grid.Row="3" Text="Фамилия:" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding RegisterLastName, UpdateSourceTrigger=PropertyChanged}" Margin="0,10,0,10"/>

                        <Button Grid.Row="4" Grid.ColumnSpan="2" Content="ЗАРЕГИСТРИРОВАТЬСЯ"
                                Command="{Binding RegisterCommand}"
                                CommandParameter="{Binding ElementName=RegisterPasswordBox}"
                                Margin="0,20,0,0" HorizontalAlignment="Stretch"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</UserControl>